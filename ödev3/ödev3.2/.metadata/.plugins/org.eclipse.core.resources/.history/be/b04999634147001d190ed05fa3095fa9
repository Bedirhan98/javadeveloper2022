package staticDemo;

public class ProductValidator {
	static {
		System.out.println("Yapici blog calisti");
	}
	
	public ProductValidator() {
		System.out.println("Yapici blog calisti");
	}

	public boolean isValid(Product product) {

		if (product.price > 0 && !product.name.isEmpty()) {
			return true;
		} else {
			return false;
		}
	}

}
 